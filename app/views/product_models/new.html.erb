<h1>Cadastrar Novo Modelo de Produto</h1>

<% if(@product_model.errors.any?) %>
  <p>Verifique os erros abaixo:</p>
  <ul>
   <% @product_model.errors.full_messages.each do |msg| %>
     <li> <%= msg %> </li>
   <% end %>
  </ul>
<% end %>

<%= form_with(model: @product_model) do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :weight %>
      <%= f.number_field :weight %> g
    </div>
    <div>
      <%= f.label :height %>
      <%= f.number_field :height %> cm
    </div>
    <div>
      <%= f.label :width %>
      <%= f.number_field :width %> cm
    </div>
    <div>
      <%= f.label :depth %>
      <%= f.number_field :depth %> cm
    </div>
    <div>
      <%= f.label :sku %>
      <%= f.number_field :sku %>
    </div>
     <div>
      <%= f.label :supplier_id %>
      <%= f.collection_select :supplier_id, Supplier.all, :id, :brand_name %>
    </div>
      <%= f.submit 'Enviar' %>

<% end %>